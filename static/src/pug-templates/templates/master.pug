include ../mixins/mixins

block variables
    -var title = title || "Page title here";

doctype html
html(class="no-js", lang="en-au")
    head
        meta(charset="utf-8")
        meta(http-equiv="x-ua-compatible", content="ie=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title=title
        link(rel="stylesheet", type="text/css", href=`${basePath}/styles/styles.css` data-highcontrast=`${basePath}/styles/styles-highcontrast.css`)
        //- Important early load external scripts
        script(src=`${basePath}/scripts/modernizr.min.js`)
        //- Icons for browsers + mobile devices, bookmarks, etc.
        link(rel="apple-touch-icon" sizes="180x180" href=`${basePath}/meta/icons/apple-touch-icon.png`)
        link(rel="icon" type="image/png" sizes="32x32" href=`${basePath}/meta/icons/favicon-32x32.png`)
        link(rel="icon" type="image/png" sizes="16x16" href=`${basePath}/meta/icons/favicon-16x16.png`)
        link(rel="manifest" href=`${basePath}/meta/manifest.json`)
        link(rel="mask-icon" href=`${basePath}/meta/icons/safari-pinned-tab.svg` color="#ef4236")
        link(rel="shortcut icon" href=`${basePath}/meta/icons/favicon.ico`)
        meta(name="theme-color" content="#ffffff")
        //- Meta configuration for Search Engines and Facebook
        meta(name="description", content="")
        meta(name="keywords", content="")
        meta(property="og:title", content="")
        meta(property="og:type", content="article")
        meta(property="og:url", content="")
        meta(property="og:image", content=`${basePath}/images/facebook.png`)
        meta(property="og:site_name", content="")
        meta(property="og:description", content="")
    body(class=`${section} ${template}`)
        a(href="#main", class="skip-to-content", tabindex=0) Skip to main content
        include ../partials/header
        //- The main content area
        main(id="main", role="main")
            include ../partials/page-details
            h1=title
            block pagecontent
        //- The svg sprite sheet
        .svg-spritesheet
            include ../../../build/svgs/spritesheet.svg
        //- JavaScript libraries and UX based code
        script(src=`${basePath}/scripts/app.js`)
